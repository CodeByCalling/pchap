rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email.matches('.*admin.*');
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isValidFile() {
      // Enforce file types: Images or PDF
      return request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf';
    }

    function isValidSize() {
      // Enforce max size: 5MB
      return request.resource.size < 20 * 1024 * 1024;
    }

    // MAIN UPLOAD RULE
    // Allow uploads ONLY to 'uploads/{userId}/...'
    match /uploads/{userId}/{allPaths=**} {
      allow write: if isOwner(userId)
                   && isValidFile()
                   && isValidSize();
                   
      allow read: if isOwner(userId) || isAdmin();
    }

    // LEGACY PATHS (Read Only)
    // To prevent breaking existing images, we allow READ but DENY WRITE.
    match /applicants/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; 
    }

    match /contributions/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }
  }
}
